<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/colorPrimary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_screen_icon</item>
        <item name="windowSplashScreenAnimationDuration">3000</item>
        <item name="postSplashScreenTheme">@style/AppTheme</item>

        <!-- Status bar and Nav bar configs -->
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="alertDialogTheme">@style/MyDialogTheme</item>

        <item name="snackbarStyle">@style/AppTheme.SnackbarStyle</item>
        <item name="snackbarButtonStyle">@style/AppTheme.SnackbarButtonStyle</item>
        <item name="snackbarTextViewStyle">@style/AppTheme.SnackbarTextStyle</item>

        <item name="android:textViewStyle">@style/AppTheme.DefaultTextViewStyle</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textViewStyle">@style/AppTheme.PopupOverlayTextViewStyle</item>
    </style>

    <style name="AppTheme.Toolbar" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="colorControlNormal">@color/colorIconWhite</item>
    </style>

    <style name="AppTheme.BottomNavigationBar" parent="@style/Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemIconTint">@drawable/bottom_nav_colors_selector</item>
        <item name="itemTextColor">@color/colorWhite</item>
    </style>

    <style name="AppTheme.TitleStyle">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorR6Text</item>
    </style>

    <style name="AppTheme.SubTitleStyle">
        <item name="android:textSize">@dimen/text_size_subtitle</item>
        <item name="android:textColor">@color/colorR6Text</item>
    </style>

    <style name="AppTheme.CheckboxStyle" parent="Base.Theme.AppCompat">
        <item name="android:textColorSecondary">@color/colorWhite</item>
        <item name="colorAccent">@color/colorWhite</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="dialogCornerRadius">@dimen/margin_8_dp</item>
        <item name="android:textColorPrimary">@color/colorR6DialogTextColor</item>
        <item name="buttonBarButtonStyle">@style/MyDialogButtonTheme</item>
    </style>

    <style name="MyDialogButtonTheme" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="AppTheme.TabLayoutStyle" parent="Widget.MaterialComponents.TabLayout.Colored">
        <item name="android:background">@color/colorPrimary</item>
        <item name="tabIconTint">@drawable/tab_layout_colors_selector</item>
        <item name="tabTextColor">@color/colorWhite</item>
        <item name="tabIndicatorColor">@color/colorWhite</item>
    </style>

    <style name="AppTheme.SnackbarStyle" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="AppTheme.SnackbarButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:textColor">@color/colorGreen</item>
    </style>

    <style name="AppTheme.SnackbarTextStyle" parent="Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="AppTheme.CollapsingToolBarLayoutCollapsedTitleStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="AppTheme.CollapsingToolBarLayoutExpandedTitleStyle" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textColor">@color/colorTransparent</item>
    </style>

    <style name="AppTheme.DefaultTextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/colorDefaultText</item>
    </style>

    <style name="AppTheme.CTUTextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/colorDefaultText</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.PopupOverlayTextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="AppTheme.ContentHeader1Style" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/colorDefaultText</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>

    <style name="AppTheme.ContentHeader2Style" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/colorDefaultText</item>
        <item name="fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">@dimen/text_size_subtitle</item>
    </style>

    <style name="AppTheme.ContentCaptionStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/colorDefaultText</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">@dimen/text_size_subtitle</item>
    </style>

    <style name="AppTheme.ContentItalicStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/colorDefaultText</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">@dimen/text_size_default</item>
    </style>

    <style name="AppTheme.ContentButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/colorRed</item>
    </style>

    <style name="AppTheme.NewsCategoryButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/news_category_button_colors</item>
        <item name="android:insetTop">5dp</item>
        <item name="android:insetBottom">5dp</item>
        <item name="android:insetLeft">3dp</item>
        <item name="android:insetRight">3dp</item>

        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>

        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>

        <item name="cornerRadius">0dp</item>
        <item name="android:textSize">12sp</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>
