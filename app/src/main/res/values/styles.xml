<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="alertDialogTheme">@style/MyDialogTheme</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="AppTheme.Toolbar" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@color/colorIconWhite</item>
    </style>

    <style name="AppTheme.BottomNavigationBar" parent="@style/Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemIconTint">@drawable/bottom_nav_colors_selector</item>
    </style>

    <style name="AppTheme.TitleStyle">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="AppTheme.SubTitleStyle">
        <item name="android:textSize">@dimen/text_size_subtitle</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="AppTheme.CheckboxStyle" parent="Base.Theme.AppCompat">
        <item name="android:textColorSecondary">@color/colorWhite</item>
        <item name="colorAccent">@color/colorWhite</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="dialogCornerRadius">@dimen/margin_8_dp</item>
        <item name="android:textColorPrimary">@color/colorBlack</item>
        <item name="buttonBarButtonStyle">@style/MyDialogButtonTheme</item>
    </style>

    <style name="MyDialogButtonTheme" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

</resources>
